# Configurações do Servidor
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database PostgreSQL
# IMPORTANTE: Substitua 'change_me' pela senha desejada
POSTGRES_USER=metalgalvano
POSTGRES_PASSWORD=change_me
POSTGRES_DB=metalgalvano

# URL de conexão com o banco (usada pelo Prisma)
# IMPORTANTE: Atualize a senha aqui também
DATABASE_URL="postgresql://metalgalvano:change_me@postgres:5432/metalgalvano?schema=public"

# Firebase Admin SDK - SUBSTITUA COM SUAS CREDENCIAIS
FIREBASE_PROJECT_ID=seu-projeto-firebase-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@seu-projeto.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=seu-projeto.appspot.com

# Segurança
JWT_SECRET=your-super-secret-jwt-key-change-this
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
